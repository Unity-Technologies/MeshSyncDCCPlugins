#!/usr/bin/env bash

# The default will build all
CMAKE_BUILD_ARGS="-DBUILD_MAYA_ALL=ON -DBUILD_3DSMAX_ALL=ON -DBUILD_BLENDER_ALL=ON -DBUILD_MOTIONBUILDER_ALL=ON -DBUILD_METASEQUOIA_ALL=ON -DBUILD_MODO_ALL=ON"

#Invalid arguments check
if [ "$#" -le 0  ]; then
    echo "Usage: build_meshsync_dcc_plugin [meshsync_version]"
    exit
fi

MESHSYNC_VER=$1

#Custom build arguments
if [ "$#" -ge 2 ]; then
    shift 1
    CMAKE_BUILD_ARGS="$*"
fi

BUILD_SYSTEM=""
UNAME_OUT="$(uname -s)"
case "${UNAME_OUT}" in
    Darwin*)    BUILD_SYSTEM="-GXcode";;
    *)          BUILD_SYSTEM="";;
esac
echo ${machine}

echo "cmake build Arguments: $CMAKE_BUILD_ARGS"
cmake -UBUILD_*_PLUGIN -UBUILD_*_ALL -DMESHSYNC_VER:STRING=$MESHSYNC_VER $CMAKE_BUILD_ARGS $BUILD_SYSTEM ..
